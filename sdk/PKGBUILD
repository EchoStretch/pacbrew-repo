pkgname=ps5-payload-sdk
pkgver=0.11
pkgrel=1
pkgdesc="An SDK for PS5 payloads that uses dynamic linking"
arch=('any')
license=('GPLv3')
url="https://github.com/ps5-payload-dev/sdk"
source=("https://github.com/ps5-payload-dev/sdk/archive/refs/tags/v${pkgver}.tar.gz")
sha256sums=('deb0a40140b0cc8a93a9e1ea0a91db41082fc27bf84b49717f60dceabed47cfe')
groups=('ps5-payload-dev')
options=(!strip)

build() {
  make -C sdk-${pkgver}
}

package() {
  make -C sdk-${pkgver} install DESTDIR="${pkgdir}/opt/pacbrew/ps5/payload-sdk"
}

