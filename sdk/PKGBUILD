pkgname=ps5-payload-sdk
pkgver=0.11.d2e454b5
pkgrel=1
pkgdesc="An SDK for PS5 payloads that uses dynamic linking"
arch=('any')
license=('GPLv3')
url="https://github.com/ps5-payload-dev/sdk"
source=("git+https://github.com/ps5-payload-dev/sdk.git#commit=d2e454b5")
sha256sums=('SKIP')
groups=('ps5-payload-dev')
options=(!strip)

build() {
  make -C sdk
}

package() {
  export DESTDIR="${pkgdir}/opt/pacbrew/ps5/payload-sdk"
  make -C sdk install
}

