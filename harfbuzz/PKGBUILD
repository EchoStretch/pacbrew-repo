pkgname=ps5-payload-harfbuzz
pkgver=9.0.0
pkgrel=1
arch=('x86_64')
pkgdesc="OpenType text shaping engine"
url="https://harfbuzz.github.io/"
license=('MIT')
options=(!strip libtool staticlibs)
source=("https://github.com/harfbuzz/harfbuzz/releases/download/$pkgver/harfbuzz-$pkgver.tar.xz")
sha256sums=('a41b272ceeb920c57263ec851604542d9ec85ee3030506d94662067c7b6ab89e')
groups=('ps5-payload-dev')
depends=('ps5-payload-freetype')
makedepends=('ps5-payload-sdk')

prepare() {
    export PS5_PAYLOAD_SDK=/opt/ps5-payload-sdk
}

build() {
    source "${PS5_PAYLOAD_SDK}/toolchain/prospero.sh"
    cd harfbuzz-$pkgver

    ${CMAKE} -DCMAKE_INSTALL_PREFIX="${PS5_HBROOT}" \
	     -DCMAKE_BUILD_TYPE=Release \
	     -DHB_HAVE_FREETYPE=YES \
	     -B build \
             -S .
    ${MAKE} -C build
}

package() {
    source "${PS5_PAYLOAD_SDK}/toolchain/prospero.sh"
    cd harfbuzz-$pkgver

    ${MAKE} -C build install DESTDIR="${pkgdir}/${PS5_SYSROOT}"
}
